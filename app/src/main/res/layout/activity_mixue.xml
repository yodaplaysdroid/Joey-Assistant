<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA8B0"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="100dp"
            android:paddingBottom="30dp">

            <ImageView
                android:id="@+id/backButton4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n米雪冰城甜蜜蜜\n"
                android:fontFamily="@font/simhei"
                android:textSize="40dp"
                android:textFontWeight="900"
                android:textColor="#BB7480" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#95CAFB"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/gif3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/gif3"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/chosenDrink"
                        android:text="我想喝..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"/>

                    <Button
                        android:id="@+id/startStopButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:fontFamily="@font/arialbd"
                        android:backgroundTint="#478778"/>

                    <Button
                        android:id="@+id/mixueNav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="帮我找蜜雪"
                        android:fontFamily="@font/simhei"
                        android:backgroundTint="#356AAB"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#EFEFEF"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEASON MENU"
                        android:fontFamily="@font/ariblk"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/drinkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>